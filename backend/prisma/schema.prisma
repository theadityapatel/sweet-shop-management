generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())
}

model Sweet {
  id        String   @id @default(uuid())
  name      String
  category  String
  price     Float
  quantity  Int
}


